	WP Admin Comments
*************************************/

	// replace text "Admin" --> "ADRIEN"
	// li.comment-author-{your WP admin name here!}
	$('div.entry-comments ol.comment-list li.comment-author-adrien-admin > article header.comment-header p.comment-author span').text('Adrien');
	
	// Top LVL comments ~ get a number!
		// span to inject
		var numSpan = $('<span class="top-comment-index"><span>');
		
		// Top LVL comments
		var $topLVLcomments = $('div.entry-comments ol.comment-list > li.comment > article header.comment-header');
		
		// inject <span>s
		$topLVLcomments.append( numSpan );
		
		// drop in index NUMs
		var topCommentIndex = 1;
		$topLVLcomments.each( function(){
		
			$(this).find( 'span.top-comment-index' ).text( topCommentIndex );
			topCommentIndex++;
		
		});


/******************************************
	Contact Form Classes
*******************************************/

	// cache elems
	var $theForm = $( 'form.accua-form' );
	var formDIVs = $( $theForm ).find( 'div.pfbc-element' );
	var txtareaDIVs = $( $theForm ).find( 'div.pfbc-element textarea' ).closest( 'div.pfbc-element' );
	
	// insert DIVs
	var contactDIV = $( '<div class="contact-info field-group"></div>' );
	var aboutDIV = $( '<div class="about-you field-group"></div>' );	
	$( formDIVs ).first().before( contactDIV );
	$(txtareaDIVs).first().before( aboutDIV );

	// move divs w/ textareas
	$( $theForm ).find( 'div.about-you' ).append( txtareaDIVs );

	// move all but buttons --> into div.contact-info
	var contactFields = $( $theForm ).find( '> div.pfbc-element' ).not( '.pfbc-buttons' );
	$( $theForm ).find( 'div.contact-info' ).append( contactFields );













